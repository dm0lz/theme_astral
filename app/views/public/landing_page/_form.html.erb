<div id="contact-form" class="max-w-3xl mx-auto bg-[#050510]/95 backdrop-blur-xl rounded-xl p-8 shadow-xl border border-indigo-800/30">
  <%= form_with(model: contact, url: public_contacts_path, class: "space-y-6", data: { turbo: true }) do |f| %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= f.label :name, "Nom complet", class: "block text-indigo-200 mb-2 text-sm" %>
        <%= f.text_field :name, 
            required: true,
            placeholder: "Votre nom",
            class: "w-full px-4 py-3 bg-indigo-950/80 border border-indigo-800/50 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-400/50 text-white placeholder-indigo-400" %>
      </div>
      <div>
        <%= f.label :email, "Email", class: "block text-indigo-200 mb-2 text-sm" %>
        <%= f.email_field :email, 
            required: true,
            placeholder: "votre@email.com",
            class: "w-full px-4 py-3 bg-indigo-950/80 border border-indigo-800/50 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-400/50 text-white placeholder-indigo-400" %>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= f.label :birth_datetime, "Date et heure de naissance", class: "block text-indigo-200 mb-2 text-sm" %>
        <%= f.datetime_field :birth_datetime,
            required: true,
            class: "w-full px-4 py-3 bg-indigo-950/80 border border-indigo-800/50 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-400/50 text-white" %>
      </div>
      <div>
        <%= f.label :birthplace, "Lieu de naissance", class: "block text-indigo-200 mb-2 text-sm" %>
        <%= f.text_field :birthplace,
            required: true,
            placeholder: "Ville, Pays",
            class: "w-full px-4 py-3 bg-indigo-950/80 border border-indigo-800/50 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-400/50 text-white placeholder-indigo-400" %>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= f.label :consultation_datetime, "Date et heure de la consultation", class: "block text-indigo-200 mb-2 text-sm" %>
        <%= f.datetime_field :consultation_datetime,
            required: true,
            class: "w-full px-4 py-3 bg-indigo-950/80 border border-indigo-800/50 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-400/50 text-white" %>
      </div>
      <div>
        <%= f.label :consultation_type, "Type de consultation", class: "block text-indigo-200 mb-2 text-sm" %>
        <%= f.select :consultation_type,
            options_for_select([
              ['Sélectionnez un type de consultation', ''],
              ['Thème Natal', 'natal'],
              ['Thème des Transits', 'transit'],
              ['Thème Progressé', 'progressed'],
              ['Révolution Solaire', 'solar'],
              ['Thème de Synastrie', 'synastry'],
              ['Thème Composite', 'composite'],
              ['Thème Karmique', 'karmic'],
              ['Thème de naissance d\'un enfant', 'child_birth'],
              ['Astro géographie', 'astro_geography']
            ]),
            {},
            {
              required: true,
              class: "w-full px-4 py-3 bg-indigo-950/80 border border-indigo-800/50 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-400/50 text-white appearance-none"
            }
        %>
      </div>
    </div>

    <div>
      <%= f.label :message, "Message (optionnel)", class: "block text-indigo-200 mb-2 text-sm" %>
      <%= f.text_area :message,
          rows: 4,
          placeholder: "Vos questions ou préoccupations spécifiques...",
          class: "w-full px-4 py-3 bg-indigo-950/80 border border-indigo-800/50 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-400/50 text-white placeholder-indigo-400 resize-none" %>
    </div>

    <%= f.button type: "submit",
        class: "w-full bg-gradient-to-r from-amber-400 to-amber-600 px-6 py-4 rounded-lg text-indigo-950 font-medium hover:shadow-lg hover:shadow-amber-500/20 transition-all flex items-center justify-center group" do %>
      Réserver Ma Consultation
      <svg class="w-5 h-5 ml-2 transition-transform group-hover:translate-x-1" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="5" y1="12" x2="19" y2="12"></line>
        <polyline points="12 5 19 12 12 19"></polyline>
      </svg>
    <% end %>
  <% end %>
</div>