<!-- Header -->
<header class="fixed w-full z-50 transition-all duration-300 bg-indigo-950/50 backdrop-blur-sm">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between py-4">
      <div class="flex items-center">
        <%= link_to root_path, class: "text-xl font-serif font-medium tracking-wide text-white" do %>
          <span class="text-xl font-serif font-medium tracking-wide text-white">theme-astral.me</span>
        <% end %>
      </div>
      
      <!-- Desktop Navigation -->
      <nav class="hidden md:flex space-x-8">
        <%= link_to "Accueil", root_path, class: "text-white/80 hover:text-amber-300 transition-colors font-medium px-4 py-2" %>
        <%= link_to "Services", "#{root_path}#services", class: "text-white/80 hover:text-amber-300 transition-colors font-medium px-4 py-2" %> 
        <%= link_to "À Propos", "#{root_path}#a-propos", class: "text-white/80 hover:text-amber-300 transition-colors font-medium px-4 py-2" %>
        <%= link_to "Témoignages", "#{root_path}#temoignages", class: "text-white/80 hover:text-amber-300 transition-colors font-medium px-4 py-2" %>
        <%= link_to "Contact", "#{root_path}#contact", class: "text-white/80 hover:text-amber-300 transition-colors font-medium px-4 py-2" %>
        <%= link_to "Se Connecter", app_root_path, class: "bg-gradient-to-r from-amber-400 to-amber-600 px-4 py-2 rounded-full text-indigo-950 font-medium hover:shadow-lg hover:shadow-amber-500/20 transition-all" %>
      </nav>
      
      <!-- Mobile menu button -->
      <button class="md:hidden text-white">
        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-16 6h16"></path>
        </svg>
      </button>
    </div>
  </div>
</header>