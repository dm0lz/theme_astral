<% content_for :title, "Editing chat message" %>

<div class="max-w-lg mx-auto mt-10">
  <h1 class="text-2xl font-serif font-bold mb-8 text-center bg-clip-text text-transparent bg-gradient-to-r from-white via-amber-100 to-amber-300">Edit Chat Message</h1>
  <%= render "form", chat_message: @chat_message %>
  <div class="mt-6 flex justify-between">
    <%= link_to "Show this chat message", @chat_message, class: "text-indigo-300 hover:text-amber-400 transition" %>
    <%= link_to "Back to chat messages", app_chat_messages_path, class: "text-indigo-300 hover:text-amber-400 transition" %>
  </div>
</div>
