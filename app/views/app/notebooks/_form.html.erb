<%# Flash messages %>
<% if notice %>
  <div class="max-w-md mx-auto mb-6 p-4 rounded-lg bg-green-500/20 border border-green-500/50">
    <div class="text-green-300 font-medium">
      <%= notice %>
    </div>
  </div>
<% end %>

<% if alert %>
  <div class="max-w-md mx-auto mb-6 p-4 rounded-lg bg-yellow-500/20 border border-yellow-500/50">
    <div class="text-yellow-300 font-medium">
      <%= alert %>
    </div>
  </div>
<% end %>

<div class="max-w-md mx-auto bg-[#050510]/95 backdrop-blur-xl rounded-xl p-8 shadow-xl border border-indigo-800/30">
  <h1 class="text-3xl font-serif font-bold mb-8 text-center">
    <span class="bg-clip-text text-transparent bg-gradient-to-r from-white via-amber-100 to-amber-300">
      <%= notebook.new_record? ? "📝 New Notebook" : "✏️ Edit Notebook" %>
    </span>
  </h1>

  <%= form_with(model: [:app, notebook], local: true, class: "space-y-6") do |form| %>
    <% if notebook.errors.any? %>
      <div class="p-4 rounded-lg bg-red-500/20 border border-red-500/50">
        <h3 class="text-red-300 font-medium mb-2">
          <%= pluralize(notebook.errors.count, "error") %> prohibited this notebook from being saved:
        </h3>
        <ul class="list-disc list-inside space-y-1">
          <% notebook.errors.each do |error| %>
            <li class="text-red-200 text-sm"><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="space-y-6">
      <div>
        <%= form.label :title, class: "block text-sm font-medium text-indigo-200 mb-2" %>
        <%= form.text_field :title,
            required: true,
            autofocus: true,
            class: "w-full px-4 py-3 bg-[#0f172a] border border-indigo-700/50 rounded-lg text-white placeholder-gray-400 focus:ring-2 focus:ring-amber-500/50 focus:border-amber-500/50 transition duration-200 #{'border-red-500/50 focus:ring-red-500/50 focus:border-red-500/50' if notebook.errors[:title].any?}",
            placeholder: "Enter notebook title" %>
        <% if notebook.errors[:title].any? %>
          <p class="mt-1 text-sm text-red-400">
            <%= notebook.errors[:title].first %>
          </p>
        <% end %>
      </div>

      <div>
        <%= form.label :description, class: "block text-sm font-medium text-indigo-200 mb-2" %>
        <%= form.text_area :description, 
            rows: 4,
            class: "w-full px-4 py-3 bg-[#0f172a] border border-indigo-700/50 rounded-lg text-white placeholder-gray-400 focus:ring-2 focus:ring-amber-500/50 focus:border-amber-500/50 transition duration-200 resize-vertical #{'border-red-500/50 focus:ring-red-500/50 focus:border-red-500/50' if notebook.errors[:description].any?}",
            placeholder: "Describe what this notebook is for..." %>
        <% if notebook.errors[:description].any? %>
          <p class="mt-1 text-sm text-red-400">
            <%= notebook.errors[:description].first %>
          </p>
        <% end %>
      </div>
    </div>

    <div class="flex flex-col sm:flex-row items-center justify-between gap-4 pt-4 border-t border-indigo-800/30">
      <%= link_to "Cancel", app_notebooks_path, class: "text-indigo-300 hover:text-amber-400 transition duration-200" %>
      <%= form.submit notebook.new_record? ? "Create Notebook" : "Update Notebook",
          class: "w-full sm:w-auto px-6 py-3 bg-gradient-to-r from-amber-500 to-amber-600 hover:from-amber-600 hover:to-amber-700 text-white font-medium rounded-lg transition duration-200 focus:outline-none focus:ring-2 focus:ring-amber-400/50" %>
    </div>
  <% end %>
</div>
