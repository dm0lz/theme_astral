<%# Flash messages %>
<% if notice %>
  <div class="max-w-7xl mx-auto mb-6 p-4 rounded-lg bg-green-500/20 border border-green-500/50 text-green-300">
    <%= notice %>
  </div>
<% end %>

<% content_for :title, "Note" %>

<div class="max-w-4xl mx-auto px-4">
  <div class="bg-[#050510]/95 backdrop-blur-xl rounded-xl shadow-xl border border-indigo-800/30 p-8">
    <div class="mb-6 pb-6 border-b border-indigo-800/30">
      <h1 class="text-3xl font-serif font-bold">
        <span class="bg-clip-text text-transparent bg-gradient-to-r from-white via-amber-100 to-amber-300">
          ðŸ“„ Note Details
        </span>
      </h1>
    </div>

    <%= render @note %>

    <div class="flex items-center justify-between mt-8 pt-6 border-t border-indigo-800/30">
      <div class="flex items-center space-x-4">
        <%= link_to edit_app_note_path(@note), 
            class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-indigo-600 to-indigo-700 hover:from-indigo-700 hover:to-indigo-800 text-white font-medium rounded-lg transition duration-200 focus:outline-none focus:ring-2 focus:ring-indigo-400/50" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          Edit Note
        <% end %>
        
        <%= button_to app_note_path(@note), 
            method: :delete,
            class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-red-600 to-red-700 hover:from-red-700 hover:to-red-800 text-white font-medium rounded-lg transition duration-200 focus:outline-none focus:ring-2 focus:ring-red-400/50",
            form: { data: { turbo_confirm: "Are you sure you want to delete this note?" } } do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
          Delete Note
        <% end %>
      </div>
      
      <div>
        <%= link_to app_notes_path, 
            class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-amber-500 to-amber-600 hover:from-amber-600 hover:to-amber-700 text-white font-medium rounded-lg transition duration-200 focus:outline-none focus:ring-2 focus:ring-amber-400/50" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18"></path>
          </svg>
          Back to Notes
        <% end %>
      </div>
    </div>
  </div>
</div>
