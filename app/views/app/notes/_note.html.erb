<div id="<%= dom_id note %>" class="bg-indigo-900/20 border border-indigo-800/30 rounded-lg p-4">
  <div class="space-y-3">
    <div class="prose prose-invert max-w-none">
      <div class="text-white whitespace-pre-wrap leading-relaxed">
        <%= note.body %>
      </div>
    </div>
    
    <div class="flex items-center justify-between text-xs text-indigo-200/60 pt-2 border-t border-indigo-800/20">
      <div class="flex items-center space-x-4">
        <% if note.created_at %>
          <div class="flex items-center">
            <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <%= time_ago_in_words(note.created_at) %> ago
          </div>
        <% end %>
      </div>
      
      <div class="flex items-center space-x-2">
        <%= link_to app_note_path(note), class: "text-indigo-300 hover:text-amber-400 transition duration-200" do %>
          <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
          </svg>
        <% end %>
        <%= link_to edit_app_note_path(note), class: "text-indigo-300 hover:text-amber-400 transition duration-200" do %>
          <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
        <% end %>
        <%= button_to app_note_path(note), method: :delete, 
            class: "text-red-400 hover:text-red-300 transition duration-200", 
            form: { data: { turbo_confirm: "Are you sure you want to delete this note?" } } do %>
          <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
        <% end %>
      </div>
    </div>
  </div>
</div>
