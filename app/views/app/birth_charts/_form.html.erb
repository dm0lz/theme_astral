<%# Flash messages %>
<% if birth_chart.errors.any? %>
  <div class="max-w-md mx-auto mb-6 p-4 rounded-lg bg-red-500/20 border border-red-500/50 text-red-300">
    <h2 class="font-medium mb-2"><%= pluralize(birth_chart.errors.count, "error") %> prohibited this birth chart from being saved:</h2>
    <ul class="list-disc list-inside space-y-1">
      <% birth_chart.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="max-w-md mx-auto bg-[#050510]/95 backdrop-blur-xl rounded-xl p-8 shadow-xl border border-indigo-800/30">
  <h1 class="text-3xl font-serif font-bold mb-8 text-center">
    <span class="bg-clip-text text-transparent bg-gradient-to-r from-white via-amber-100 to-amber-300">
      <%= birth_chart.new_record? ? "New Birth Chart" : "Edit Birth Chart" %>
    </span>
  </h1>

  <%= form_with(model: [:app, birth_chart], class: "space-y-6") do |form| %>
    <div class="space-y-6">
      <div>
        <%= form.label :first_name, class: "block text-indigo-200 mb-2 text-sm" %>
        <%= form.text_field :first_name,
            required: true,
            autofocus: true,
            class: "w-full px-4 py-3 bg-indigo-950/80 border border-indigo-800/50 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-400/50 text-white placeholder-indigo-400",
            placeholder: "Enter first name" %>
      </div>

      <div>
        <%= form.label :last_name, class: "block text-indigo-200 mb-2 text-sm" %>
        <%= form.text_field :last_name,
            required: true,
            class: "w-full px-4 py-3 bg-indigo-950/80 border border-indigo-800/50 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-400/50 text-white placeholder-indigo-400",
            placeholder: "Enter last name" %>
      </div>

      <div>
        <%= form.label :birth, "Birth Date and Time", class: "block text-indigo-200 mb-2 text-sm" %>
        <%= form.datetime_field :birth,
            required: true,
            class: "w-full px-4 py-3 bg-indigo-950/80 border border-indigo-800/50 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-400/50 text-white" %>
      </div>

      <div>
        <%= form.label :city, class: "block text-indigo-200 mb-2 text-sm" %>
        <%= form.text_field :city,
            required: true,
            class: "w-full px-4 py-3 bg-indigo-950/80 border border-indigo-800/50 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-400/50 text-white placeholder-indigo-400",
            placeholder: "Enter city" %>
      </div>

      <div>
        <%= form.label :country, class: "block text-indigo-200 mb-2 text-sm" %>
        <%= form.text_field :country,
            required: true,
            class: "w-full px-4 py-3 bg-indigo-950/80 border border-indigo-800/50 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-400/50 text-white placeholder-indigo-400",
            placeholder: "Enter country" %>
      </div>

    </div>

    <div class="flex flex-col sm:flex-row items-center justify-between gap-4 pt-4 border-t border-indigo-800/30">
      <%= link_to "Cancel", app_birth_charts_path, class: "text-indigo-300 hover:text-amber-400 transition duration-200" %>
      <%= form.submit birth_chart.new_record? ? "Create Birth Chart" : "Update Birth Chart",
          class: "w-full sm:w-auto px-6 py-3 bg-gradient-to-r from-amber-500 to-amber-600 hover:from-amber-600 hover:to-amber-700 text-white font-medium rounded-lg transition duration-200 focus:outline-none focus:ring-2 focus:ring-amber-400/50" %>
    </div>
  <% end %>
</div>
